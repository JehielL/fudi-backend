# ==========================================
# CONFIGURACIÓN DE PRODUCCIÓN - FUDI.ES
# ==========================================
# Copia este archivo a .env.production y configura tus valores

# ----- Base de Datos MySQL -----
MYSQL_ROOT_PASSWORD=CambiaEstoPorUnaPasswordSegura123!
MYSQL_DATABASE=fudidb

SPRING_DATASOURCE_URL=jdbc:mysql://java_db:3306/fudidb?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=CambiaEstoPorUnaPasswordSegura123!

# ----- JPA/Hibernate -----
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# ----- Seguridad JWT -----
# IMPORTANTE: Genera una clave segura única (mínimo 256 bits)
# Puedes usar: openssl rand -base64 64
JWT_SECRET=CambiaEstoPorUnSecretoMuyLargoYSeguroGeneradoAleatoriamente2026!

# ----- Email (SMTP) -----
EMAIL_ENABLED=false
EMAIL_FROM=noreply@fudi.es
FRONTEND_URL=https://fudi.es

# Si activas email, configura:
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=tu-email@gmail.com
# MAIL_PASSWORD=tu-app-password

# ----- Uploads -----
FILE_UPLOAD_DIR=/app/uploads
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=30MB

# ----- Perfil Activo -----
SPRING_PROFILES_ACTIVE=prod
